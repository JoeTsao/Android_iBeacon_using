<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="額外派工查詢"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/todayjobserch"
            android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <Space android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Space
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_width="10dp" />

        <TextView
            android:text="編號"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:id="@+id/jobnum"
            android:textSize="25sp"
            android:gravity="center"/>

        <Space
            android:layout_height="match_parent"
            android:layout_width="10dp" />

        <TextView
            android:text="工作內容"
            android:layout_width="124dp"
            android:layout_height="match_parent"
            android:id="@+id/jobtext"
            android:textSize="25sp"
            android:gravity="center"/>

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:text="完成確認"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/donecheck"
            android:textSize="25sp"
            android:gravity="center"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="326dp"
        android:id="@+id/patchinglist" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <Space
            android:layout_height="match_parent"
            android:layout_weight="19493.29"
            android:layout_width="30dp" />

        <Button
            android:text="今日派工"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/chk_default_work_bt"
            android:textSize="18sp"
            android:background="@color/colorAccent" />

        <Space
            android:layout_height="match_parent"
            android:layout_weight="19493.29"
            android:layout_width="30dp" />

        <Button
            android:text="確認上傳"
            android:id="@+id/send_databt"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />

        <Space android:layout_height="match_parent"
            android:layout_width="30dp" />

        <Button
            android:text="返回"
            android:layout_height="wrap_content"
            android:id="@+id/back_bt"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="@color/colorPrimary" />

        <Space
            android:layout_height="match_parent"
            android:layout_weight="19493.29"
            android:layout_width="30dp" />

    </LinearLayout>

</LinearLayout>